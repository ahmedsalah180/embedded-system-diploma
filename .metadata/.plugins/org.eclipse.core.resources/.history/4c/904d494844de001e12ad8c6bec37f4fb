#include <stdio.h>
#include <stdlib.h>

struct Sinfo
{
	unsigned char name[32];
	unsigned int rollnumber;
	unsigned float marks;
};

void getinfo(struct Sinfo x)
{
	printf("enter name: ");
	fflush(stdout);
	scanf("%s",x.name);
	printf("enter roll number: ");
	fflush(stdout);
	scanf("%d",x.rollnumber);
	printf("enter marks: ");
	fflush(stdout);
	scanf("%f",x.marks);
}

void printinfo(struct Sinfo x)
{
	printf("displaying information:\n");
	printf("name: %s\n",x.name);
	printf("roll: %d\n",x.rollnumber);
	printf("marks: %f\n",x.marks);
}

int main()
{
	struct Sinfo gx;
	printf("enter information of student: ");
	getinfo(gx);
	printinfo(gx);
}
